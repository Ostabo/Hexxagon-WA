# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                          controllers.HomeController.index()

# Request the current status of the game
GET         /status                    controllers.HomeController.status()

# Game overview
GET         /overview                  controllers.HomeController.overview()
# Game overview in simpler html/text style
GET         /overview-plain            controllers.HomeController.overviewPlain()

# About page
GET         /about                     controllers.HomeController.about()

# Place a stone on the field at the given coordinates - Game Commands
+nocsrf
POST        /place/:x/:y/:stone        controllers.HomeController.place(x: Int, y: Int, stone: Char)
POST        /fill/:stone               controllers.HomeController.fillAll(stone: Char)
POST        /reset                     controllers.HomeController.reset()
POST        /undo                      controllers.HomeController.undo()
POST        /redo                      controllers.HomeController.redo()
POST        /save                      controllers.HomeController.save()
POST        /load                      controllers.HomeController.load()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

# 404 - page not found error
GET         /*page                     controllers.HomeController.notFound(page: String)
